    <main>
        <h2 class="text-center m-4">Listando skin</h2>
        <div class="row m-4">
            <button class="btn bg-info"><a href="addpersons.html"><i class="bi bi-person-plus">Adicionar Skin</i></a></button>
        </div>
        <section class="listarperson border border-black m-4" id="listar-Skin">
            <!-- Cabeçario -->
            <div class="row m-4 border border-black p-2 text-center">
                <div class="col">Categoria</div>
                <div class="col">Nome</div>
                <div class="col">Descição</div>
                <div class="col">Gênero</div>
                <div class="col">Valor</div>
                <div class="col">Raridade</div>
                <div class="col">Foto-1</div>
                <div class="col">Foto-2</div>
                <div class="col">Promoção</div>
                <div class="col">Atualizar</div>
                <div class="col">Apagar</div>
            </div>
        </section>
