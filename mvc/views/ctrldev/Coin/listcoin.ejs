    <main>
        <h2 class="text-center m-4">Listando Moedas</h2>
        <div class="row m-4">
          <a href="/addcoin" class="text-center">
            <button class="btn btn-info p-2 text-light">
              <i class="bi bi-file-earmark-plus"></i> Adicionar Coin
            </button>
          </a>
        </div>
        <section class="listcoin border border-black m-4 text-center" id="listar-coin">
            <!-- Cabeçario -->
            <div class="row m-4 border border-black p-2 text-center">
                <div class="col">Nome da Moeda</div>
                <div class="col">$Valor</div>
                <div class="col">Imagem</div>
                <div class="col">Atualizar</div>
                <div class="col">Apagar</div>
            </div>
          </section>
    </main>

    <script>
      async function carregarCoin(){

        let elCoin = document.querySelector("#listar-coin")

        const dados = await fetch('http://localhost:3000/coins')
        const json = await dados.json()
        let coins = await json

        for(let coin of coins){
          console.log(coin)
          elCoin.innerHTML +=`
          <div class="row m-4 text-center">
            <div class="col border-end border-danger">${coin.nome}</div>
            <div class="col border-end border-danger">${coin.value}</div>
            <div class="col border-end border-danger"><img src="./image/upload/${coin.image}" class="thumbnail" alt=""></div>
            <div class="col border-start text-center"><button onclick="atualizar(${coin.id})" class="btn btn-success"><i class="bi bi-arrow-repeat"></i></button></div>
            <div class="col border-start text-center"><button onclick="apagar(${coin.id})" class="btn btn-danger"><i class="bi bi-trash"></i></button></div>
          </div>
          `
        } 
      }
 
      async function apagar(id){     

        const dados = await fetch('http://localhost:3000/coin/'+id, { method: 'DELETE' })
        const json = await dados.json()
        let coins = await json
              
        location.reload()
      }

      function atualizar(id){
        location.href = "/altercoin/"+id
      }

      carregarCoin()
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
