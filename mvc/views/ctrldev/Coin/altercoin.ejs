    <main>
        <section id="altercoin">
            <h2 class="text-center m-4">Alterar Moedas</h2>
            <form id="enviarAtualizacao">
                <input aria-hidden="true" type="hidden" name="id" id="id" value="<%= r.id %>">
                <div class="row">
                    <div class="col m-4">
                        <label for="nome" class="form-label">Nome da moeda </label>
                        <input type="text" value="<%= r.nome %>" name="nome" id="nome" class="form-control" tabindex="1">
                    </div>
                    <div class="col m-4">
                        <label for="valor" class="form-label">Valor</label>
                        <input type="text" value="<%= r.value %>" name="valor" id="valor" class="form-control" tabindex="3">
                    </div>
                </div>
                <div class="row">
                    <div class="col m-4">
                        <label for="image" class="form-label">Foto</label>
                            <input type="file" value="<%= r.image %>" name="image" id="image" class="form-control" tabindex="2">
                    </div>
                </div>
                    <div class="row m-4">
                        <input type="submit" value="Alterar" name="btalter" id="btalter" class="btn btn-warning mt-4 form-control" tabindex="6">
                    </div>
                
            </form>
        </section>
    </main>

    <script>

        document.getElementById("enviarAtualizacao").addEventListener("submit", (e) => {
           e.preventDefault()
           enviar()
        })
   
        async function enviar(){        
        
          const id = document.getElementById("id").value
          const nome = document.getElementById("nome").value
          const valor = document.getElementById("valor").value
          const image = document.getElementById("image").value
          
          const data = {
           "nome":nome,
           "value":valor,
           "image":image,
           "id":id
          }  
          const dados = await fetch('/coin/'+id, { 
               method: 'PUT',
               headers: {
                   'Accept': 'application/json',
                   'Content-Type': 'application/json'
               },
               body: JSON.stringify(data)
           })
   
   
           const json = await dados.json()
           let coin = await json   
           
           alert(coin.msg)
        }
        
   
   
       </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
