<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Adicionando Personagem</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <style>
        i{
            color: #fff;
            width: 20px;
            height: 20px;
        }
        .home{
            margin: 10px 0px 0px 0px;
        }
        .sair{
            margin: 10px 10px 0px 0px;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg bg-body-tertiary p-3" data-bs-theme="dark" id="top">
        <div class="container-fluid">
          <a class="navbar-brand" href="/dashboard">
            <img src="../image/logo1.png" alt="logo" width="50" height="50">
          </a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
              <li class="nav-item">
                <a class="nav-link active" aria-current="page" href="/atrativos">Listar Atrativos</a>
              </li>
              <li class="nav-item">
                <a class="nav-link active" aria-current="page" href="/coin">Listar Coin</a>
              </li>
              <li class="nav-item">
                <a class="nav-link active" aria-current="page" href="/missao">Listar Missões</a>
              </li>
              <li class="nav-item">
                <a class="nav-link active" aria-current="page" href="/personagem">Listar Personagem</a>
              </li>
            </ul>
              <a href="/login"><button class="btn btn-danger">Sair</button></a>
          </div>
        </div>
      </nav>
    <main>
        <section id="cadperson">
            <h2 class="text-center m-4">Cadastrar Personagem</h2>
            <form action="/registrarpersonagem" method="post">
                <div class="row">
                    <div class="col m-4">
                        <label for="txtnamepersonagem">Nome do Personagem</label>
                        <input type="text" name="txtnamepersonagem" id="txtnamepersonagem" class="form-control" tabindex="1">
                    </div>
                    <div class="col m-4">
                        <label for="txttotalcoinpersonagem">Total de Moedas</label>
                        <input type="text" name="txttotalcoinpersonagem" id="txttotalcoinpersonagem" class="form-control" value="0" tabindex="2">
                    </div>
                </div>
                <div class="row">
                    <div class="col m-4">
                        <label for="txtgeneropersonagem">Gênero</label>
                        <select name="txtgeneropersonagem" id="txtgeneropersonagem" class="form-control" tabindex="3">
                            <option value="M">M</option>
                            <option value="F">F</option>
                        </select>
                    </div>
                    <div class="col m-4">
                        <label for="txttipopersonagem">Tipo</label>
                        <select name="txttipopersonagem" id="txttipopersonagem" class="form-control" tabindex="4">
                            <option value="Humano">Humano</option>
                            <option value="Mago">Mago</option>
                            <option value="Coruja">Coruja</option>
                        </select>
                    </div>
                </div>
                <div class="row">
                    <div class="col m-4">
                        <label for="txtstartlat">Latitude</label>
                        <input type="text" name="txtstartlat" id="txtstartlat" class="form-control" value="33.7367518947601" tabindex="5">
                    </div>
                    <div class="col m-4">
                        <label for="txtstartlong">Longitude</label>
                        <input type="text" name="txtstartlong" id="txtstartlong" class="form-control" value="132.48511964017715" tabindex="6">
                    </div>
                </div>
                <div class="row">
                    <div class="col m-4">
                        <label for="txtskins">Skins</label>
                        <select name="txtskins" id="txtskins" class="form-control" tabindex="4">
                            
                        </select>
                    </div>
                    <div class="col m-4">
                        <input type="submit" value="Cadastrar" name="btcadperson" id="btcadperson" class="btn btn-primary mt-4 form-control" tabindex="7">
                    </div>
                    
                </div>
            </form>
        </section>
    </main> 

    <script>
        async function carregarSkinPersonagem(){

            let elPersonagem = document.querySelector("#txtskins")

            const dados = await fetch('http://localhost:3000/Skins')
            const json = await dados.json()
            let skinpersonagens = await json

            for(let skinpersonagem of skinpersonagens){

            console.log(skinpersonagem)
            elPersonagem.innerHTML +=`
                <option value="${skinpersonagem.id}">${skinpersonagem.nome}</option>
                
                `} 
        }

        carregarSkinPersonagem()
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
</body>
</html>