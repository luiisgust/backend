    <main>
        <section id="cadcoin">
            <h2 class="text-center m-4">Casdastrar Moedas</h2>
            <form action="/registrarcoin" method="post" enctype="multipart/form-data">
                <div class="row">
                    <div class="col m-4">
                        <label for="txtnamecoin">Nome da Moeda</label>
                        <input type="text" name="txtnamecoin" id="txtnamecoin" class="form-control border-black" tabindex="1">
                    </div>
                    <div class="col m-4">
                        <label for="txtvaluecoin">Valor da Moeda</label>
                        <input type="text" name="txtvaluecoin" id="txtvaluecoin" class="form-control border-black" placeholder="Exemplo: 2,50" tabindex="2"> 
                    </div>
                </div>
                <div class="row">
                    <div class="col m-4">
                        <label for="filecoin">imagem da moeda</label>
                        <input type="file" name="filecoin" id="filecoin" class="form-control border-black" tabindex="3">
                    </div>
                    <div class="col m-4">
                        <input type="submit" value="Cadastrar Moeda" name="btcadcoin" id="btcadcoin" class="btn btn-primary form-control mt-4" tabindex="4">
                    </div>
                </div>
            </form>
        </section>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
