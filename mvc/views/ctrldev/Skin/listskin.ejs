    <script>
      async function carregarSkin(){

        let elSkin = document.querySelector("#listar-skin")

        const dados = await fetch('http://localhost:3000/Skins')
        const json = await dados.json()
        let skins = await json

        for(let skin of skins){

          console.log(skin)
          elSkin.innerHTML +=`
          <div class="row m-4">
            <div class="col border-end border-black">${skin.categoria}</div>
            <div class="col border-end border-black">${skin.nome}</div>
            <div class="col border-end border-black">${skin.desc}</div>
            <div class="col border-end border-black">${skin.genero}</div>
            <div class="col border-end border-black">${skin.valor}</div>
            <div class="col border-end border-black">${skin.raridade}</div>
            <div class="col border-end border-black">${skin.foto1}</div>
            <div class="col border-end border-black">${skin.foto2}</div>
            <div class="col border-end border-black">${skin.id_promocoes}</div>
            <div class="col border-start text-center"><button onclick="atualizar(${skin.id})" class="btn bg-success" ><i class="bi bi-pencil"></i> Update</button></div>
            <div class="col border-start text-center"><button onclick="apagar(${skin.id})" class="btn bg-danger"><i class="bi bi-trash"></i>Delete</button></div>
          </div>
          `
        } 
      }
    
      async function apagar(id){     
    
        const dados = await fetch('http://localhost:3000/skin/'+id, { method: 'DELETE' })
        const json = await dados.json()
        let skins = await json
              
        location.reload()
      }
    
      function atualizar(id){
        location.href = "/alterskin/"+id
      }

      carregarSkin()
    </script>

